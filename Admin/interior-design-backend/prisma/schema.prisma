generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id                 String    @id @default(uuid())
  email              String    @unique
  passwordHash       String
  resetToken         String?
  resetTokenExpiry   DateTime?
  createdAt          DateTime  @default(now())
}

model Client {
  id        String    @id @default(uuid())
  username    String    @unique
  pinHash   String
  isBlocked Boolean   @default(false)
  createdAt DateTime  @default(now())
  projects  Project[]
}

enum ProjectStatus {
  PENDING
  IN_PROGRESS
  DELAYED
  COMPLETED
}

model Project {
  id          String         @id @default(uuid())
  title       String
  description String
  status      ProjectStatus  @default(PENDING)
  clientId    String
  client      Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  entries     ProjectEntry[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum FileType {
    IMAGE
    VIDEO
    PDF
}

enum EntryCategory {
    TIMELINE
    AGREEMENT
    PAYMENT_INVOICE
    HANDOVER
    CERTIFICATE
}

model ProjectEntry {
  id          String        @id @default(uuid())
  projectId   String
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fileUrl     String        // Supports both images and videos
  fileType    FileType      @default(IMAGE)
  description String
  category    EntryCategory @default(TIMELINE)
  createdAt   DateTime      @default(now())
}
